<html>
	<head>
		<meta charset="utf-8" />

		<title>{{ app.user.username }} - ISN</title>

		<!-- CSS -->
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400,600,700,700italic' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic' rel='stylesheet' type='text/css'>
		
		{% stylesheets filter='cssrewrite'
		'bundles/eliastre100pythonproject/css/*' %}
        	<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    	{% endstylesheets %}
	</head>
	<body>
		<header>
			<div class="user">
				Utilisateur : <span class="username">{{ app.user.username }}</span> 
			</div>
			<div class="actions">
				<ul>
					<li title="Ajouter un element"><a href="#"  onClick="actionLoad('{{ path('eliastre100_python_actions_add') }}')" data-reveal-id="Modal"><i class="fa fa-plus"></i></a></li>
					<li title="Suprimer un element"><a href="#"  onClick="actionLoad('{{ path('eliastre100_python_actions_remove') }}')" data-reveal-id="Modal"><i class="fa fa-minus"></a></i></li>
					<li class="disconnect" title="Deconexion"><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-unlink"></i></a><li>
				</ul>
			</div>
		</header>
		<aside>
			{% render url("eliastre100_python_project_load_tree") %}
			
		</aside>
		<section>
			<div class="error">
				<h2 class="errorTitle">Oops, no work open.</h2>
				<p class="errorExp">Try to open a doc.</p>
			</div>
		</section>
		<div id="Modal" class="reveal-modal">
     		<div class="modal">
     			<h3>Please wait</h3>
     			<p>Content will be loaded in a few seconds.</p>
     		</div>
     		<a class="close-reveal-modal">&#215;</a>
		</div>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		{% javascripts '@Eliastre100PythonProjectBundle/Resources/public/js/*' %}
        	<script type="text/javascript" src="{{ asset_url }}"></script>
    	{% endjavascripts %}
	</body>
</html>